fn main() {
    const MAX_POINTS: u32 = 100_000;
    const PI: f64 = 3.1415926535;
    const GREETING: &str = "Hello, Rust!";
    const IS_ACTIVE: bool = true;
    const BYTE_VALUE: u8 = 255;

    println!("MAX_POINTS (u32): {}", MAX_POINTS);
    println!("PI (f64): {}", PI);
    println!("GREETING (&str): {}", GREETING);
    println!("IS_ACTIVE (bool): {}", IS_ACTIVE);
    println!("BYTE_VALUE (u8): {}", BYTE_VALUE);
}
